{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "dom.iterable"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "paths": {
      "@zui/*": ["./lib/*"]
    }
  },
  "include": [
    "src",
    "config",
    "dev/src/dev.ts",
    "exts/*/dev.ts"
  ],
  "exclude": [
    "public"
  ]
}
