{
  "name": "zui3",
  "private": true,
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build:vite": "tsc && vite build",
    "build": "tsx ./tools/build.ts",
    "preview": "vite preview",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "docs:dev-fast": "cd docs && pnpm dev",
    "docs:dev": "pnpm docs:prepare && pnpm docs:dev-fast & pnpm docs:watch",
    "docs:watch": "tsx ./tools/docs/watch.ts",
    "docs:build": "pnpm docs:prepare -- --copy && cd docs && pnpm build",
    "docs:serve": "cd docs && pnpm serve",
    "docs:prepare": "tsx ./tools/docs/prepare.ts",
    "extend-libs": "tsx ./tools/extend-libs.ts"
  },
  "workspaces": [
    "./lib"
  ],
  "dependencies": {
    "@zui/alert": "workspace:^0.0.1",
    "@zui/base": "workspace:0.0.1",
    "@zui/scrollbar": "workspace:0.0.1",
    "@zui/utilities": "workspace:0.0.1",
    "highlight.js": "^11.6.0",
    "zui-config": "workspace:^0.0.1"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/markdown-it": "^12.2.3",
    "@types/minimist": "^1.2.2",
    "@types/node": "18.7.9",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "autoprefixer": "10.4.8",
    "chokidar": "^3.5.3",
    "colorette": "^2.0.19",
    "cssnano": "5.1.13",
    "eslint": "8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": ">=2.25.3 <3.0.0",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "less": "^4.1.3",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.4",
    "markdown-it-toc-done-right": "^4.2.0",
    "minimist": "^1.2.6",
    "postcss": "8.4.16",
    "postcss-import": "^14.1.0",
    "postcss-nesting": "^10.1.10",
    "stylelint": "14.11.0",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "28.0.0",
    "stylelint-order": "^5.0.0",
    "tailwindcss": "^3.1.8",
    "tsx": "3.8.2",
    "typescript": "^4.5.4",
    "vite": "3.0.9",
    "vite-plugin-eslint": "1.8.1"
  }
